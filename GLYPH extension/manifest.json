{
  "manifest_version": 3,
  "name": "GLYPH - Instant AI Transliterator",
  "version": "2.0.2",
  "description": "GLYPH: INSTANT AI-powered text processing and auto-transliteration extension with ZERO-DELAY real-time translation, multiple LLM providers, and lightning-fast text enhancement",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "contextMenus",
    "notifications",
    "tabs"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://api.anthropic.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://api.cohere.ai/*",
    "https://api.together.xyz/*",
    "https://translate.googleapis.com/*",
    "https://api.mymemory.translated.net/*",
    "https://libretranslate.de/*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "GLYPH - Instant AI Transliterator"
  },
  "options_page": "options.html",
  "commands": {
    "toggle-auto-transliteration": {
      "suggested_key": {
        "default": "Ctrl+Shift+T"
      },
      "description": "Toggle auto transliteration on/off"
    },
    "process-selected-text": {
      "suggested_key": {
        "default": "Ctrl+Shift+P"
      },
      "description": "Process selected text with AI"
    }
  },
  "icons": {
    "16": "icon.jpg",
    "48": "icon.jpg",
    "128": "icon.jpg"
  }
}